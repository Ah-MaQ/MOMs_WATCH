{
  "manifest_version": 3,
  "name": "Mom's Watch",
  "description": "집중도 추적 프로그램",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "camera",
    "alarms",
    "notifications"
  ],


  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  
  "options_page": "options/options.html",

  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
